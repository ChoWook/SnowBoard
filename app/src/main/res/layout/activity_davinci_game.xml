    <!--노란박스+text-->
    <RelativeLayout
        android:layout_width="370dp"
        android:layout_height="100dp"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true">

        <!--노란박스-->
        <RelativeLayout
            android:id="@+id/yello_box"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/davinich_btn_content"
            android:gravity="center">

            <!--남은 흰색 블럭-->
            <ImageView
                android:id="@+id/img_left_white_block"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:src="@drawable/white_stand_block_1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/img_left_white_block"
                android:fontFamily="@font/jua"/>

            <TextView
                android:id="@+id/txt_num_left_white_block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"
                android:layout_toRightOf="@+id/img_left_white_block"
                android:fontFamily="@font/jua"/>


            <!--남은 얼음 블럭-->
            <ImageView
                android:id="@+id/img_left_ice_block"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_left_white_block"
                android:layout_marginLeft="45dp"
                android:src="@drawable/ice_stand_block_1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/img_left_ice_block"
                android:fontFamily="@font/jua"/>

            <TextView
                android:id="@+id/txt_num_left_ice_block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"
                android:layout_toRightOf="@+id/img_left_ice_block"
                android:fontFamily="@font/jua"/>

            <!-- 추리 값 -->
            <TableLayout
                android:id="@+id/layout_guess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_left_ice_block"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60dp"
                android:visibility="gone"
                >
                <TableRow>
                    <TextView
                        android:id="@+id/img_guess_left"
                        android:layout_width="50dp"
                        android:layout_height="45dp"
                        android:textSize="40dp"
                        android:text="-"
                        android:fontFamily="@font/jua"
                        />
                    <TextView
                        android:id="@+id/txt_guess_num"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jua"
                        android:text="0"
                        android:textSize="40dp"
                        />
                    <TextView
                        android:id="@+id/img_guess_right"
                        android:layout_width="50dp"
                        android:layout_height="45dp"
                        android:textSize="40dp"
                        android:text="+"
                        android:fontFamily="@font/jua"
                        />
                </TableRow>

            </TableLayout>

            <!--시작 버튼-->
            <ImageView
                android:id="@+id/img_davinci_ready_start"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_left_ice_block"
                android:layout_marginLeft="60dp"
                android:src="@drawable/start_game_btn"
                />
            <!--턴 넘기기-->
            <ImageView
                android:id="@+id/img_davinici_turn_pass"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_left_ice_block"
                android:layout_marginLeft="60dp"
                android:src="@drawable/davinci_pass"
                android:visibility="invisible"/>


            <!--추리하기-->
            <ImageView
                android:id="@+id/img_davinici_guess"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_davinici_turn_pass"
                android:layout_marginLeft="15dp"
                android:src="@drawable/davinci_infer"
                android:visibility="invisible"/>
        </RelativeLayout>


        <!--안내문구-->
        <TextView
            android:id="@+id/txt_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/yello_box"
            android:layout_marginTop="13dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/jua"
            android:textSize="17sp"
            android:text="txt_guide"/>

    </RelativeLayout>




