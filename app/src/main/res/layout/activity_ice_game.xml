<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IceGameActivity"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#2E3436"
    android:id="@+id/layout_ice_game">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="15dp">
        <TableRow>
            <RelativeLayout
                android:id="@+id/img_ice_player_1p"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:visibility="invisible">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:src="@drawable/img_1p"/>
                <TextView
                    android:id="@+id/txt_ice_player_1p_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="txt_ice_player_1p_name"
                    android:textSize="10dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="13dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/img_ice_player_2p"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:visibility="invisible">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:src="@drawable/img_2p"/>
                <TextView
                    android:id="@+id/txt_ice_player_2p_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="txt_ice_player_1p_name"
                    android:textSize="10dp"
                    android:layout_marginLeft="52dp"
                    android:layout_marginTop="13dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/img_ice_player_3p"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:visibility="invisible">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:src="@drawable/img_3p"/>
                <TextView
                    android:id="@+id/txt_ice_player_3p_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="txt_ice_player_3p_name"
                    android:textSize="10dp"
                    android:layout_marginLeft="52dp"
                    android:layout_marginTop="13dp"/>
            </RelativeLayout>
        </TableRow>

        <TableRow>
            <ImageView
                android:id="@+id/img_ice_turn_arrow_1p"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:src="@drawable/arrow"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/img_ice_turn_arrow_2p"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:src="@drawable/arrow"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/img_ice_turn_arrow_3p"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:src="@drawable/arrow"
                android:visibility="invisible"/>
        </TableRow>

        <TableRow
            android:layout_marginTop="10dp"
            >
            <ImageView
                android:id="@+id/img_turn_what_1p"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:src="@drawable/roulette_white"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/img_turn_what_2p"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:src="@drawable/roulette_blue"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/img_turn_what_3p"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:src="@drawable/roulette_all"
                android:visibility="invisible"/>
        </TableRow>

    </TableLayout>



    <!-- icegame ground -->
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="550dp"
        android:gravity="center_horizontal"
        android:background="@drawable/icegame_ground">


        <!-- icegame 블럭 총 9행 -->
        <RelativeLayout
            android:layout_width="336dp"
            android:layout_height="520dp"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal">


            <!-- 1행 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <!-- 1x1 -->
                <ImageView
                    android:id="@+id/img_ice_block_01"
                    android:layout_width="56dp"
                    android:layout_height="70dp"
                    android:src="@drawable/icegame_blue_ice"
                    />

            </LinearLayout>


            <!-- 2행 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
