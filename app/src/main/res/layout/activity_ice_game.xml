            </LinearLayout>



            <!-- 3행 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginTop="96dp">

                <!-- 3x1 -->
                <ImageView
                    android:id="@+id/img_ice_block_06"
                    android:layout_width="56dp"
                    android:layout_height="70dp"
                    android:src="@drawable/icegame_blue_ice"/>

                <!-- 3x2 -->
                <ImageView
                    android:id="@+id/img_ice_block_07"
                    android:layout_width="56dp"
                    android:layout_height="70dp"
                    android:src="@drawable/icegame_white_ice"/>

                <!-- 3x3 -->
                <ImageView
                    android:id="@+id/img_ice_block_08"
                    android:layout_width="56dp"
                    android:layout_height="70dp"
                    android:src="@drawable/icegame_blue_ice"/>

                <!-- 3x4 -->
                <ImageView
                    android:id="@+id/img_ice_block_09"
                    android:layout_width="56dp"
                    android:layout_height="70dp"
                    android:src="@drawable/icegame_white_ice"/>

                <!-- 3x5 -->
                <ImageView
                    android:id="@+id/img_ice_block_10"
