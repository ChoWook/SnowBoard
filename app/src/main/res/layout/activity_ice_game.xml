                    android:layout_width="56dp"
                    android:layout_height="70dp"
                    android:src="@drawable/icegame_white_ice"/>

                <!-- 5x2 -->
                <ImageView
                    android:id="@+id/img_ice_block_18"
                    android:layout_width="56dp"
                    android:layout_height="70dp"
                    android:src="@drawable/icegame_white_ice"/>

                <!-- 5x3 -->
                <ImageView
                    android:id="@+id/img_ice_block_19"
