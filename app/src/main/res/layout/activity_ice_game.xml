                <!-- 2x1 -->
                <ImageView
                    android:id="@+id/img_ice_block_02"
                    android:layout_width="56dp"
                    android:layout_height="70dp"
                    android:src="@drawable/icegame_blue_ice"/>

                <!-- 2x2 -->
                <ImageView
                    android:id="@+id/img_ice_block_03"
                    android:layout_width="56dp"
                    android:layout_height="70dp"
